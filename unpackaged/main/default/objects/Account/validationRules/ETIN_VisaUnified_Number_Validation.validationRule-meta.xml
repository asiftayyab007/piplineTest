<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ETIN_VisaUnified_Number_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(ETIN_Visa_Unified_Number__c )),
NOT(REGEX(ETIN_Visa_Unified_Number__c , &quot;^[0-9.]+$&quot;))
)</errorConditionFormula>
    <errorDisplayField>ETIN_Visa_Unified_Number__c</errorDisplayField>
    <errorMessage>Please enter only numbers</errorMessage>
</ValidationRule>
