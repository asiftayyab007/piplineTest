<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ETST_Parent_Phone_Validation</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(PersonMobilePhone)),
NOT(REGEX(PersonMobilePhone,&quot;([+971]{4}|[971]{3}|[00971]{5})[0-9]{9}&quot;))
)</errorConditionFormula>
    <errorDisplayField>PersonMobilePhone</errorDisplayField>
    <errorMessage>Phone number should start with &quot;+971&quot; or &quot;971&quot; followed by 9 digits.</errorMessage>
</ValidationRule>
