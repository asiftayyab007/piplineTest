<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Loss_Reason_Remarks_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(StageName, &#39;Closed Cancelled&#39;),
ISBLANK(Loss_Reason_Remarks__c)
)</errorConditionFormula>
    <errorDisplayField>Loss_Reason_Remarks__c</errorDisplayField>
    <errorMessage>Loss Reason Remarks is Mandatory for Closed Cancelled Opportunities.</errorMessage>
</ValidationRule>
