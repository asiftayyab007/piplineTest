<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ETST_EID_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(ETST_Emirates_Id__c)),
NOT(REGEX(ETST_Emirates_Id__c,&quot;([784-]{4}[0-9-]{5}[0-9-]{8}[0-9]{1})&quot;))
)</errorConditionFormula>
    <errorDisplayField>ETST_Emirates_Id__c</errorDisplayField>
    <errorMessage>Please enter Student Emirates Id in correct format (784-XXXX-XXXXXXX-X)</errorMessage>
</ValidationRule>
