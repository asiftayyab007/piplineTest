<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(FirstName),OR($RecordType.Name = &quot;Luxury Vehicles Maintenance unit&quot;,
$RecordType.Name = &quot;Automotive Dealership&quot;
))</errorConditionFormula>
    <errorDisplayField>FirstName</errorDisplayField>
    <errorMessage>First Name is Mandatory to create the lead</errorMessage>
</ValidationRule>
