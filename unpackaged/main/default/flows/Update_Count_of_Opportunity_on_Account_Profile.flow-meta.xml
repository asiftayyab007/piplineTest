        <dataType>Number</dataType>
        <expression>{!Fetch_Records_Of_Account_Profile.No_of_Completed_Projects__c}+1</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>AddOppAmount</name>
        <dataType>Currency</dataType>
        <expression>{!Fetch_Records_Of_Account_Profile.Completed_Projects_Value__c}+{!$Record.Amount}</expression>
