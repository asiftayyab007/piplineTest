        <dataType>Currency</dataType>
        <expression>{!$Record.Amount}+{!Fetch_Records_Of_Account_Profile.Current_Projects_Value__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>NewCondition</name>
