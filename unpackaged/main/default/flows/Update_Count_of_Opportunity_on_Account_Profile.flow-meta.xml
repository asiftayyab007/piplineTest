        <dataType>Number</dataType>
        <expression>{!Fetch_Records_Of_Account_Profile.No_of_Current_Projects__c}-1</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>SubtractOppAmount</name>
        <dataType>Currency</dataType>
        <expression>{!Fetch_Records_Of_Account_Profile.Current_Projects_Value__c}-{!$Record.Amount}</expression>
        <scale>2</scale>
